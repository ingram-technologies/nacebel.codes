{
	"name": "nacebel-codes",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"lint": "next lint",
		"start": "next start",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@radix-ui/react-dropdown-menu": "latest",
		"@radix-ui/react-slot": "latest",
		"@radix-ui/react-toast": "latest",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"knip": "^5.62.0",
		"lucide-react": "^0.539.0",
		"next": "15.4.6",
		"react": "^19",
		"react-dom": "^19",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@types/node": "^24",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"postcss": "^8.5",
		"prettier": "^3.6.2",
		"prettier-plugin-organize-imports": "^4.2.0",
		"tailwindcss": "^4.1.12",
		"typescript": "^5"
	},
	"prettier": {
		"trailingComma": "all",
		"printWidth": 88,
		"useTabs": true,
		"tabWidth": 4,
		"experimentalOperatorPosition": "start",
		"plugins": [
			"prettier-plugin-organize-imports"
		],
		"overrides": [
			{
				"files": [
					"*.yaml",
					"*.yml"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	}
}
